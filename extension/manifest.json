{
  "manifest_version": 3,
  "name": "Flag Battle Chat Reader",
  "version": "1.2",
  "description": "Reads YouTube Chat and sends it to Flag Battle Game",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.youtube.com/*",
    "https://youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Flag Battle Stats"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://studio.youtube.com/*",
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ]
}